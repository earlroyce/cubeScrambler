<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hugpro.cubeScrambler" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CubeScrambler</name>
    <description>
        Earl's 3x3x3 Rubik's Cube Scrambler.
		Displays random cube scrambles for practice purposes.
    </description>
    <author email="earlroyce@gmail.com">
        Earl Royce Hugo
    </author>
    
	<content src="index.html" />
    
	<plugin name="cordova-plugin-whitelist" spec="1" />
    
	<access origin="*" />
    
	<allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
	<platform name="android">
        <allow-intent href="market:*" />
    </platform>
    
	<platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
	<preference name="phonegap-version" value="cli-8.0.0" />
   
    <engine name="android" spec="~7.1.1" />
    
	<icon src="res/icon.png" />

</widget>